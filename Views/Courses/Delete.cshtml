@model SchoolManagementApp.MVC.Data.Course

@{
    ViewData["Title"] = "Supprimer";
}

<h1><center><font size=10 color="#03224c">Supprimer</font></center></h1>

<h3>Etes vous sure de vouloir le supprimer ?</h3>
<div>
    <h4>Cours</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Credits)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Credits)
        </dd>
    </dl>

    <form asp-action="supprimé">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-dark" asp-action="Index">Retour à la liste</a>
    </form>
</div>
