@model SchoolManagementApp.MVC.Data.Lecturer

@{
    ViewData["Title"] = "Détails";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Ajoutez ici vos liens vers les feuilles de style Bootstrap et autres -->
    <!-- Exemple :
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    -->
</head>
<body>

    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-4 text-primary"><font color="#03224c">Détails</font></h1>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title">Professeur</h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-2 text-muted">
                        @Html.DisplayNameFor(model => model.FirstName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>
                    <dt class="col-sm-2 text-muted">
                        @Html.DisplayNameFor(model => model.Specialité)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Specialité)
                    </dd>
                </dl>
            </div>
        </div>

        <div class="mt-4">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Modifier</a>
            <a class="btn btn-dark" asp-action="Index">Retour à la liste</a>
        </div>

        <div class="mt-5 text-center text-muted">
            <p>L'EMSI est reconnue par l'État.</p>
        </div>
    </div>

    <!-- Ajoutez ici vos liens vers les scripts Bootstrap et autres -->
    <!-- Exemple :
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyGzF0XnGnbDQECv9tc15c9TWuSKZI8bez" crossorigin="anonymous"></script>
    -->
</body>
</html>
